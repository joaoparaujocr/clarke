{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "start:dev": "tsx watch src/server.ts",
    "start:prod": "NODE_ENV=production node build/server.js",
    "build": "tsup src --out-dir build",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate src/typeorm/migrations/$npm_config_name -d src/typeorm/data-source.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/typeorm/data-source.ts",
    "migration:run:prod": "NODE_ENV=production typeorm migration:run -d build/typeorm/data-source.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/node": "^22.13.8",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@as-integrations/fastify": "^2.1.1",
    "@fastify/cookie": "^9.0.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/jwt": "^8.0.1",
    "@swc/core": "^1.11.5",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "fastify": "^4.4.0",
    "graphql": "^16.10.0",
    "graphql-scalars": "^1.24.1",
    "pg": "^8.13.3",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.8.0",
    "type-graphql": "^2.0.0-rc.2",
    "typeorm": "^0.3.20",
    "typeorm-fastify-plugin": "^2.0.1",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  }
}
